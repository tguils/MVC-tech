<section class="new-post-section">
    <a href="/dashboard/new" class="btn" id="create-new-post">+ Create new post</a>
</section>


{{#if posts.length}}
<section>
    <h2> Dashboard</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> postinfo post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">edit post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

