<section class="sign-in-page">
    <div class="form-header">
        <h1>Sign Up</h1>
    </div>
    <div class="form-section">
        <form class="signup-form">
            <div>
                <label for="username-signup">Select a Username</label>
                <input type="text" class="text-area" id="username-signup" />
            </div>
            <div>
                <label for="password-signup">Select a password</label>
                <input type="password" class="text-area" id="password-signup" />
            </div>
            <div>
                <button type="submit" class="login-signup-btn">Sign Up!</button>
            </div>
        </form>
    </div>

    <a href="/login" class="login-link">log in </a>
</section>

<script src="/public/js/signup.js"></script>